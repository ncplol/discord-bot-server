# .env.example

# --- Discord Bot Token ---
# Get this from the Discord Developer Portal
DISCORD_TOKEN=""

# --- Application IDs ---
# Your bot's client ID
CLIENT_ID=""
# The ID of the server you're testing in (optional, for fast command deployment)
GUILD_ID=""

# --- Web Interface ---
# The port the web interface will run on
PORT=3000
WEB_PORT=3001

# --- Soundboard ---
# The base URL for your cloud-hosted sound effects (e.g., https://my-bucket.s3.amazonaws.com/)
SFX_BASE_URL="https://bardsfx.s3.us-east-1.amazonaws.com/"

# --- Web UI Authentication (OAuth2) ---
# Get these from the Discord Developer Portal under OAuth2
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
# The full URL to your callback route (e.g., http://localhost:3001/api/auth/discord/callback)
DISCORD_CALLBACK_URL="/api/auth/discord/callback"
# A random string for securing sessions
SESSION_SECRET="random_secret_string_for_sessions"
# The base URL of your frontend application
FRONTEND_URL="http://localhost:5173"

CONTROLLER_ROLE_NAME="DJ"
OAUTH2_INVITE_URL="https://discord.com/oauth2/authorize?client_id=..."

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=ncp-discord-bot-bucket
S3_BUCKET_PREFIX=music/